<%= javascript 'content/content.js' %>
<%= form_for @product, :url => (@product.new_record? ? products_path : product_path(@product)) do |f| %>
  <%= base_errors_for @product %>

  <%= text_f f, :name %>
  <%= textarea_f f, :description, :class => "input-xlarge", :rows => '3' %>

  <%= submit_or_cancel f %>
<% end %>
