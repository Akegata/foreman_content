<%= javascript 'repositories/application.js' %>
<%= form_for @provider, :url => (@provider.new_record? ? repositories_providers_path : repositories_provider_path(:id => @provider.id)) do |f| %>
  <%= base_errors_for @provider %>
  <%= text_f f, :name %>
  <%= text_f f, :description %>
  <%= selectable_f f, :kind, Repositories::Provider::TYPES , {:label => _("type"), :include_blank => _("Choose a provider type")},
                           {:disabled=> !@provider.new_record? ,:onchange => 'providerTypeSelected(this);'} %>

  <%= text_f f,:repository_url,{:class=> f.type == "Redhat" ? "" : "hide"} %>
  <%= submit_or_cancel f %>
<% end %>
